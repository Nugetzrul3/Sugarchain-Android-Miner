<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--Light Mode-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#dcdcdc</item>
        <item name="textcolor">@color/colorText</item>
        <item name="buttoncolor">#606060</item>
        <item name="toolbarcolor">@color/colorPrimary</item>
        <item name="cardbkgcolor">#FFFFFF</item>
        <item name="android:itemTextAppearance">@style/lightmenutextcolor</item>
        <item name="android:itemBackground">#FFFFFF</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--Dark Mode-->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#161616</item>
        <item name="colorAccent">#ffffff</item>
        <item name="backgroundcolor">#333333</item>
        <item name="textcolor">#FDFDFD</item>
        <item name="buttoncolor">#161616</item>
        <item name="toolbarcolor">#161616</item>
        <item name="cardbkgcolor">@color/cardview_dark_background</item>
        <item name="android:itemTextAppearance">@style/darkmenutextcolor</item>
        <item name="android:itemBackground">#000000</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="darkmenutextcolor">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="lightmenutextcolor">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#ffffff</item>
    </style>


</resources>
